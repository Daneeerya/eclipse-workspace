package framework_oop_prods.copy;
import framework_oop_prods.product;

public class laptop extends product {
	//Atributes
	private String creation_date;
	private float price;
	private int num_dies_promo;
	private float price_promo;
	private String fecha_promo;
	
	//constructor
	public laptop(int stock, float weight, String iD_prod, String creation_date, float price, int num_dies_promo,
			float price_promo, String fecha_promo) {
		super(stock, weight, iD_prod);
		this.creation_date = creation_date;
		this.price = price;
		this.num_dies_promo = num_dies_promo;
		this.price_promo = price_promo;
		this.fecha_promo = fecha_promo;
	}


	//getters and setters
	public String getCreation_date() {
		return creation_date;
	}


	public void setCreation_date(String creation_date) {
		this.creation_date = creation_date;
	}

	public float getPrice() {
		return price;
	}

	public void setPrice(float price) {
		this.price = price;
	}
	
	public int getNum_dies_promo() {
		return num_dies_promo;
	}


	public void setNum_dies_promo(int num_dies_promo) {
		this.num_dies_promo = num_dies_promo;
	}


	public float getPrice_promo() {
		return price_promo;
	}


	public void setPrice_promo(float price_promo) {
		this.price_promo = price_promo;
	}


	public String getFecha_promo() {
		return fecha_promo;
	}


	public void setFecha_promo(String fecha_promo) {
		this.fecha_promo = fecha_promo;
	}

// To String
	@Override
	public String toString() {
		String cad = "";
		cad = cad + ("ID: " + super.getID_prod() + "\n" +
					 "Stock: " + super.getStock() + "\n" +
					 "Weight: " + super.getWeight() + "\n" +
					 "Creation Date: " + this.getCreation_date() + "\n" +
					 "Price: " + this.getPrice())+ "\n" +
					 "Number of days with promotion: " + this.getNum_dies_promo() + "\n" +
					 "Promotion price: " + this.getPrice_promo() + "\n" +
					 "Promotion date: " + this.getFecha_promo();
		return cad;
	}
}// end-class
