package framework_oop_prods.copy;
import framework_oop_prods.product;

public class Laptop extends product {
	//Atributes
	private String creation_date;
	private float price;
	
	//constructor
	public Laptop(int stock, float weight, String iD_prod, String creation_date, float price) {
	super(stock, weight, iD_prod);
	this.creation_date = creation_date;
	this.price = price;
	}

	//getters and setters
	public String getCreation_date() {
		return creation_date;
	}

	public void setCreation_date(String creation_date) {
		this.creation_date = creation_date;
	}

	public float getPrice() {
		return price;
	}

	public void setPrice(float price) {
		this.price = price;
	}
	
	//toString
	@Override
	public String toString() {
		String cad = "";
		cad = cad + ("ID: " + super.getID_prod() + "\n" +
					 "Stock: " + super.getStock() + "\n" +
					 "Weight: " + super.getWeight() + "\n" +
					 "Creation Date: " + this.getCreation_date() + "\n" +
					 "Price: " + this.getPrice());
		return cad;
	}
}// end-class
