package framework_oop_prods;
import framework_oop_prods.product;

public class accessory extends product {
	//Atributes
	private String type_of_product;
	private float price;
 	private float price_ult_unitats;
 	private float price_sales;
	private String f_sales;


	public accessory(int stock, float weight, String iD_prod, String type_of_product, float price,
			float price_ult_unitats, float price_sales, String f_sales) {
		super(stock, weight, iD_prod);
		this.type_of_product = type_of_product;
		this.price = price;
		this.price_ult_unitats = price_ult_unitats;
		this.price_sales = price_sales;
		this.f_sales = f_sales;
	}


	public String getType_of_product() {
		return type_of_product;
	}


	public void setType_of_product(String type_of_product) {
		this.type_of_product = type_of_product;
	}


	public float getPrice() {
		return price;
	}


	public void setPrice(float price) {
		this.price = price;
	}


	public float getPrice_ult_unitats() {
		return price_ult_unitats;
	}


	public void setPrice_ult_unitats(float price_ult_unitats) {
		this.price_ult_unitats = price_ult_unitats;
	}


	public float getPrice_sales() {
		return price_sales;
	}


	public void setPrice_sales(float price_sales) {
		this.price_sales = price_sales;
	}


	public String getF_sales() {
		return f_sales;
	}


	public void setF_sales(String f_sales) {
		this.f_sales = f_sales;
	}


	//toString
	@Override
	public String toString() {
		String cad = "";
		cad = cad + ("ID: " + super.getID_prod() + "\n" +
					 "Stock: " + super.getStock() + "\n" +
					 "Weight: " + super.getWeight() + "\n" +
					 "Type Of Product: " + this.getType_of_product() + "\n" +
					 "Price: " + this.getPrice()+ "\n" +
					 "Price last units: " +this.getPrice_ult_unitats()+ "\n" +
					 "Price sales: " + this.getPrice_sales()+ "\n" +
					 "Date sales: " + this.getF_sales();
		return cad;
	}
}
