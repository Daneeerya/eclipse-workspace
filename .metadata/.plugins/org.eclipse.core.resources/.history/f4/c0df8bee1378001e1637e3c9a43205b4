package framework_oop_prods;
import framework_oop_prods.product;

public class smartphone extends product {
	//Atributes
	private String brand;
	private float price;
	
	//constructor
	public smartphone(int stock, float weight, String iD_prod,  String brand, float price) {
		super(stock, weight, iD_prod);
		this.brand = brand;
		this.price = price;
	}

	public String getBrand() {
		return brand;
	}

	public void setBrand(String brand) {
		this.brand = brand;
	}

	public float getPrice() {
		return price;
	}

	public void setPrice(float price) {
		this.price = price;
	}

	@Override
	public String toString() {
		String cad = "";
		cad = cad + ("ID: " + super.getID_prod() + "\n" +
					 "Stock: " + super.getStock() + "\n" +
					 "Weight: " + super.getWeight() + "\n" +
					 "Creation Date: " + this.getBrand() + "\n" +
					 "Price: " + this.getPrice());
		return cad;	}
}
